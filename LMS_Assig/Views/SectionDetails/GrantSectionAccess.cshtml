@model LMS_Assig_.ViewModel.AssignSectionViewModel

<div class="col-md-4">
    <form asp-action="GrantSectionAccess" enctype="multipart/form-data">
               @if (Model.SectionSelectList != null)
               {
                   <div class="col-6 mb-3">
                       <label for="recipient-name" class="col-form-label inter">Section</label>
                       <select asp-for="@Model.AssignSection.SectionId"
                               id="cmbCompany"
                               class="form-control"
                               asp-items="@(new SelectList(Model.SectionSelectList, "SectionId", "Name"))">
                           <option value="" data-display-text="Choose an option">Select Section</option>
                       </select>
                       <span asp-validation-for="@Model.AssignSection.SectionId" class="text-danger"></span>
                   </div>
               }

               @if (Model.Teachers != null)
               {
                   <div class="col-6 mb-3">
                       <label for="recipient-name" class="col-form-label inter">Section</label>
                       <select asp-for="@Model.AssignSection.Teacher"
                               id="cmbCompany"
                               class="form-control"
                        asp-items="@(new SelectList(Model.Teachers, "Id", "FullName"))">
                           <option value="" data-display-text="Choose an option">Select Section</option>
                       </select>
                <span asp-validation-for="@Model.AssignSection.Teacher" class="text-danger"></span>
                   </div>
               }

               <div class="form-group">
                   <input type="submit" value="Save" class="btn btn-primary" />
               </div>
          </form>
</div>
