@model LMS_Assig_.ViewModel.AssignmentViewModel

<h1>Upload File</h1>

<form method="post" asp-action="Upload" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">File:</label>
        <input type="file" id="file" name="file" class="form-control-file" required>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Assignment.Name,"Name">Assignment Name:</label>
        <input type="text" asp-for="@Model.Assignment.Name" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Assignment.SectionName," Name">Section Name:</label>
        <select asp-for="@Model.Assignment.SectionName">
            <option>Select Secsion Name</option>
            <option>BSCS 1st </option>
            <option>BSCS 2st</option>
            <option>BSCS 3st</option>
            <option>BSCS 4th</option>
            <option>BSCS 5th</option>
            <option>BSCS 6th</option>
            <option>BSCS 7th</option>
            <option>BSCS 8th</option>

       </select>
    </div>





    <div class="form-group">
        <label asp-for="@Model.Assignment.UploadDate" class="control-label"></label>
        <input asp-for="@Model.Assignment.UploadDate" class="form-control" />
        <span asp-validation-for="@Model.Assignment.UploadDate" class="text-danger"></span>
    </div>



    @if (Model.SectionSelectList != null)
    {
        <div class="col-6 mb-3">
            <label for="recipient-name" class="col-form-label inter">Section</label>
            <select asp-for="Assignment.SectionID"
                    id="cmbCompany"
                    class="form-control"
                asp-items="@(new SelectList(Model.SectionSelectList, "SectionId", "Name"))">
                <option value="" data-display-text="Choose an option">Select Section</option>
            </select>
            <span asp-validation-for="Assignment.SectionID" class="text-danger"></span>
        </div>
    }


    <button type="submit" class="btn btn-primary">Upload</button>
</form>


