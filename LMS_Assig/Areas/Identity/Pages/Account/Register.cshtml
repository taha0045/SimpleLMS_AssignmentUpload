@page
@model RegisterModel
@{
    ViewData["Title"] = "Register Your Self With Us!";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row"> 
                <div class="form-floating col-lg-6">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" />
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating col-lg-6">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
           </div>
           <div class="row">
                <div class="form-floating  col-lg-6">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating  col-lg-6">
                    <input asp-for="Input.Age" class="form-control" autocomplete="Age" aria-required="true" />
                    <label asp-for="Input.Age"></label>
                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>
           </div>
            
           <div class="row">
                <div class="form-floating col-lg-6">
                    <input asp-for="Input.Address" class="form-control" autocomplete="Address" aria-required="true" />
                    <label asp-for="Input.Address"></label>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-floating col-lg-6">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
           </div>
           
           <div class="row">
                <div class="form-floating col-lg-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating col-lg-6">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" id="roleDropdown" class="form-select" aria-required="true">
                        <option disabled selected>Select Role</option>
                    </select>
                    
                </div>
           </div>
           <br />
            <div class="form-floating col-lg-6">
                <select id="sectionDropdown" asp-for="Input.SectionId" asp-items="@Model.Input.SectionList" class="form-select" aria-required="true" style="display:none;">
                    <option disabled selected>Select Section</option>
                </select>


            </div>
           <br />
           

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-4 ">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>


    @section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("roleDropdown").addEventListener("change", function () {
            var sectionDropdown = document.getElementById("sectionDropdown");
            if (this.value === "Student") {
                sectionDropdown.style.display = "block";
                sectionDropdown.setAttribute("aria-required", "true");
            } else {
                sectionDropdown.style.display = "none";
                sectionDropdown.setAttribute("aria-required", "false");
            }
        });
    </script>


}


